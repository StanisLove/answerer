.question-errors
= form_for @question, remote: remote do |f|
  .field
    = f.label      :title
    = f.text_field :title
  .field
    = f.label      :body
    = f.text_area  :body
  = render 'attachments/fields_for', f: f, attachments: attachments
  .actions
    = f.submit t('.submit', action: @question.new_record? ? 'Ask' : 'Save'),
      class: button_class
