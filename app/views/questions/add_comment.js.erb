$('#notice').html('<%= j flash[:notice] %>');
<% if @commentable.errors.present? %>
  <% @commentable.errors.full_messages.each do |message| %>
    $('.question-errors').html('<%= j message %>');
  <% end %>
<% else %>
  $('.question-errors').empty();
  <%= publish_to "/questions/#{@commentable.id}/comment" do %>
    $('.question .comments').append('<%= j render 'common/comment_content', comment: @comment %>');
  <% end %>
<% end %>
