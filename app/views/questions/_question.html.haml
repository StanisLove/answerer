- if can? :create, @subscription
  .subscription
    = link_to t('.subscribe'), question_subscribe_path(@question),
      method: :post, remote: true
- if can? :destroy, @subscription
  .subscription
    = link_to t('.unsubscribe'), question_unsubscribe_path(@question),
      method: :delete, remote: true
= render 'vote'
.question-errors
.question-content
  = render 'content'
- if can? :update, @question
  = link_to t('.edit_question'), '', class: 'edit-question-link'
  = render 'form', remote: true,
             button_class: 'edit-question-button',
              attachments: @question.attachments.first || @question.attachments.build
