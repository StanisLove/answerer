.container
  .question
    %h1= "Вопрос № #{@question.id}"
    = render 'question'

.answers
  = render 'answers'

.container
  = form_for [@question, @answer], remote: true do |f|
    .field
      = f.label :body, 'Новый ответ'
      .answer-errors
      = f.text_area :body
    .actions
      = f.submit 'Отправить ответ'
