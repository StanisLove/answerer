.container#add-email
  %h1 Add Email
  = form_for @user, as: 'user', url: finish_signup_path(@user) do |f|
    .form-group
      = f.label :email
      .controls
        = f.text_field :email, autofocus: true, value: '',
          class: 'form-control input-lg', placeholder: 'your@email.com'
        %p.help-block Please confirm your email address. No spam.
    .actions
      = f.submit 'Continue', class: 'btn btn-primary'
