$('#notice').html('<%= j flash[:notice] %>');
<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-errors').html('<%= j message %>');
  <% end %>
<% else %>
  $('.answer-errors').empty();
  $('.answers').append('<%= j render partial: "answer" %>');
  $('#answer_body').val('');
<% end %>
