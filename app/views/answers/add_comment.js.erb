$('#notice').html('<%= j flash[:notice] %>');
<% if @commentable.errors.present? %>
  <% @commentable.errors.full_messages.each do |message| %>
    $('.answer-errors').html('<%= j message %>');
  <% end %>
<% else %>
  $('.answer-errors').empty();
  <%= publish_to "/answer/#{@commentable.id}/comment" do %>
    $('#answer-<%= "#{@commentable.id}" %> .comments').append('<%= j render 'common/comment_content', comment: @comment %>');
  <% end %>
<% end %>
